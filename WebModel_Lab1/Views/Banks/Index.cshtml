@model IEnumerable<WebModel_Lab1.Models.Bank>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverallBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoldCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginCountry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverallBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoldCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginCountry)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Usreou">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Usreou">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Usreou">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
